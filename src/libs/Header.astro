---
import consts from "#/consts";
import Blog from "./icons/Blog.astro";

const { pathname } = Astro.url;

const links = [
  {
    path: "/blog",
    label: "Blog",
    icon: Blog,
  },
];
---

<header>
  <a href="/" class="logo">
    <img src="/assets/me.png" alt="logo" />
    <strong>{consts.title}</strong>
  </a>
  <nav class="links">
    {
      links.map((link) => {
        const isActive = pathname.replace(/\/$/, "").startsWith(link.path);
        return (
          <a href={link.path} class:list={["link", { active: isActive }]}>
            <link.icon style={isActive ? "solid" : "outline"} class="icon" />{" "}
            {link.label}
          </a>
        );
      })
    }
  </nav>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto 24px;
    padding: 24px;
  }
  .logo {
    display: flex;
    align-items: center;
    gap: 16px;
  }
  .logo img {
    width: 48px;
    border-radius: 100%;
  }
  .logo strong {
    font-size: 24px;
  }
  .links {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .link {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 0 14px;
    line-height: 40px;
    font-weight: 600;
    border-radius: 8px;
  }
  .link.active {
    background-color: #eee6de;
  }
  .icon {
    width: 18px;
  }
</style>
