---
import Layout from "../../layouts/Layout.astro";
import { getNotesCollection } from "src/lib/content";

const content = await getNotesCollection();
---

<Layout title="monody's notes">
  <div class="container px-3 py-24">
    <h1 class="text-3xl font-instrument-serif">
      Take<span class="italic">away</span>
    </h1>
    <p>
      I'd like a <em>double espresso</em>, please.
    </p>
    <div class="pt-12">
      <ul class="space-y-4">
        {
          content.map((entry) => (
            <li class="border-b border-border pb-4">
              <a href={`/notes/${entry.slug}`} data-astro-prefetch>
                <span class="text-subtle text-sm">{entry.data.date} â€”</span>
                <span class="font-medium font-serif">{entry.data.title}</span>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</Layout>
