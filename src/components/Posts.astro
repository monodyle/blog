---
import { getAllCollections } from "src/lib/content";
import PostHighlight from "./PostHighlight.astro";
import PostLatest from "./PostLatest.astro";

const allPosts = await getAllCollections();
const content = allPosts.filter((entry) => Boolean(entry.data.illustration));
---

<div class="space-y-12">
  <div class="space-y-4">
    <div class="pl-2">
      <h3 class="text-2xl font-instrument-serif"><em>Journey</em> Diary</h3>
      <p class="text-subtle">The things I think</p>
    </div>
    <PostHighlight posts={content} />
  </div>

  <div class="space-y-4">
    <h3 class="text-2xl font-instrument-serif">All Posts</h3>
    <PostLatest posts={allPosts} />
  </div>
</div>
